<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:resources="clr-namespace:docAndCom"
             mc:Ignorable="d"
             x:Class="docAndCom.SettingsPage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
                <Grid 
                    Padding="15, 0, 15, 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label
                        Grid.Row="0"
                        Margin="0, 25, 0, 0"
                        Text="{Binding [settingsText], Source={x:Static resources:ResourceLoader.Instance}}"
                        FontSize="Title"/>
                    <Label
                        Grid.Row="1"
                        Padding="2, 0, 2, 10"
                        FontSize="Micro"
                        Text="{Binding [languageSettingInfo], Source={x:Static resources:ResourceLoader.Instance}}"/>
                    <Label
                        Grid.Row="2"
                        Text="{Binding [languageText], Source={x:Static resources:ResourceLoader.Instance}}"
                        FontSize="Small"
                        Margin="4, 0"/>
                    <Picker x:Name="languagePicker"
                        Margin="10, 0, 10, 0"
                        Title="Select language"
                        Grid.Row="3"
                        SelectedIndexChanged="LanguageSelectedEvent"
                        FontSize="13">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>English</x:String>
                                <x:String>Polish</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                    <Label
                        Grid.Row="4"
                        Text="{Binding [tabulaSchemeNumOfColsText], Source={x:Static resources:ResourceLoader.Instance}}"
                        FontSize="Small"
                        Margin="4, 10, 4, 0"/>
                    <Picker x:Name="columnPicker"
                        Margin="10, 0, 10, 0"
                        Title="Tabular scheme columns number"
                        Grid.Row="5"
                        SelectedIndexChanged="ColumnNumberSelectedEvent"
                        FontSize="13">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>3 (default)</x:String>
                                <x:String>4</x:String>
                                <x:String>5</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                    <Label
                        Grid.Row="6"
                        Padding="15, 0, 15, 0"
                        FontSize="Micro"
                        Text="{Binding [settingsNumOfColsNote], Source={x:Static resources:ResourceLoader.Instance}}"/>
                    <Label
                        Grid.Row="7"
                        Text="{Binding [publicCopyText], Source={x:Static resources:ResourceLoader.Instance}}"
                        FontSize="Small"
                        Margin="4, 10, 4, 0"/>
                    <Grid
                        Grid.Row="8"
                        Margin="15, 1, 15, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Text="{Binding [publicCopySubTitleText], Source={x:Static resources:ResourceLoader.Instance}}" 
                            Grid.Column="0"
                            FontSize="9"
                            VerticalOptions="Center" />
                        <Label
                            x:Name="extraCopyToggler"
                            Text="&#xf205;"
                            TextType="Html"
                            FontSize="35"
                            Grid.Column="1"
                            HorizontalTextAlignment="End"
                            Style="{StaticResource FontAwesome5FreeSolid}"/>
                    </Grid>
                    <Label
                        Grid.Row="9"
                        Padding="15, 0, 15, 20"
                        FontSize="Micro"
                        Text="{Binding [publicCopyDescText], Source={x:Static resources:ResourceLoader.Instance}}"/>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>